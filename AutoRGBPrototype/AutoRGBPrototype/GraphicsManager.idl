namespace AutoRGBPrototype
{
    runtimeclass CaptureTakenEventArgs
    {
        UInt8 R { get; };
        UInt8 G { get; };
        UInt8 B { get; };
        
        // Zone-based colors as flat array: [R0,G0,B0, R1,G1,B1, ...]
        // Empty if zone mode disabled
        Windows.Foundation.Collections.IVector<UInt8> ZoneColorsFlat { get; };
        Int32 ZoneCount { get; };
    }

    runtimeclass GraphicsManager
    {
        void Initialize();
        void StartCapture();

        Boolean IsCaptureSupported();
        Int32 GetNumPixels();

        event Windows.Foundation.TypedEventHandler<GraphicsManager, CaptureTakenEventArgs> CaptureTaken;
    }
}
